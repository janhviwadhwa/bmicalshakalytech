<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/female"
            android:src="@drawable/female"
            android:scaleType="centerInside"
            android:background="@color/white"
            android:padding="13dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="39dp"/>

        <ImageButton
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/male"
            android:src="@drawable/male"
            android:scaleType="centerInside"
            android:background="@color/white"
            android:padding="13dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="234dp"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/femaleselect"
            android:src="@drawable/select"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="78dp"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/maleselect"
            android:src="@drawable/select"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="78dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtage"
            android:text="AGE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingLeft="26dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:paddingRight="13dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="26dp"
            android:background="#49E1D0"
            android:backgroundTint="#3F51B5"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="221dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="390dp"
            android:id="@+id/agerecyclerview"
            android:background="@color/white"
            android:layout_marginTop="299dp"
            android:backgroundTint="@color/black"
            android:orientation="horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtweight"
            android:text="Weight"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="26dp"
            android:background="#49E1D0"
            android:backgroundTint="#3F51B5"
            android:paddingLeft="26dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:paddingRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="442dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kg"
            android:text="KG"
            android:backgroundTint="#3F51B5"
            app:strokeWidth="1.30dp"
            app:strokeColor="@color/white"
            android:layout_marginTop="445.90dp"
            android:layout_marginLeft="156dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pounds"
            android:text="POUNDS"
            android:backgroundTint="#3F51B5"
            app:strokeWidth="1.30dp"
            app:strokeColor="@color/white"
            android:layout_marginTop="445.90dp"
            android:layout_marginLeft="260dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:id="@+id/weightrecyclerview"
            android:background="@color/white"
            android:layout_marginTop="520dp"
            android:backgroundTint="@color/black"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="650dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agell"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AGE :"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="52dp"
                    android:textSize="32.50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agecounter"
                    android:text="1"
                    android:textStyle="bold"
                    android:layout_marginLeft="78dp"
                    android:textColor="@color/white"
                    android:textSize="32.50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weightll"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight : "
                    android:layout_marginLeft="52dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="32.50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weightcounter"
                    android:text="1"
                    android:textStyle="bold"
                    android:layout_marginLeft="35.10dp"
                    android:textColor="@color/white"
                    android:textSize="32.50dp"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextheight"
            android:text="NEXT"
            android:textColor="@color/white"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="780dp"
            android:textStyle="bold"
            android:layout_marginBottom="26dp"
            android:textSize="26dp"/>

    </RelativeLayout>
</ScrollView>